@model WebMarket.Entities.Product

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Id_priceupdate" value="@ViewBag.Id_priceupdate"/>
            <div class="form-group">
                <input asp-for="Id" class="form-control d-lg-none" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control " />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <input name="old_price" class="form-control d-lg-none" value="@Model.Price"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control d-lg-none" />
                <input name="file" id="imgInp" type="file" />
                <img id="blah" src="@Url.Content(Model.Image)" width="150px" height="150px" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="IdProvider" class="control-label">Provider</label>
                <select for="IdProvider" class="form-control" asp-items="ViewBag.IdProvider"></select>
                <span asp-validation-for="IdProvider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="IdType" class="control-label">Type</label>
                <select for="IdType" class="form-control" asp-items="ViewBag.IdType"></select>
                <span asp-validation-for="IdType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{
    <script src="~/js/readURL.js"></script>
}