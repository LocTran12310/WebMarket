@model IEnumerable<WebMarket.Entities.Product>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}
@section Styles{
    <!-- Custom styles for this page -->
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <script src="~/js/preview.js" type="text/javascript"></script>
    <style>
        #preview {
            position: absolute;
            border: 1px solid #ccc;
            background: #333;
            padding: 5px;
            display: none;
            color: #fff;
        }
    </style>
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Categories Tables</h6>
            <a href="@Url.Action("Create")" class="btn btn-success">Add New</a>
        </div>
        <div class="m-md-8" style="display:flex">
            <div class="form-group md-3 pl-4">
                <label class="control-label"></label>
                <select name="category" class="form-control category " asp-items="ViewBag.IdCategory" style="width:auto!important"></select>
            </div>
            <div class="form-group md-3 pl-4">
                <label class="control-label"></label>
                <select name="type" class="form-control type " asp-items="ViewBag.IdType" style="width:auto!important; display:none"></select>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdTypeNavigation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Discount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdProviderNavigation.Name)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    <img class="preview" src="~/images/img-products/@item.Image" width="150px" height="150px" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdTypeNavigation.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Discount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdProviderNavigation.Name)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Index" asp-controller="ProductDetail" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
@section Scripts{
    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/js/Admin/demo/datatables-demo.js"></script>
}

<script>
    $(".category").val(@ViewBag.cate)
    if (@ViewBag.cate != 0) {
        $(".type").css("display", "block");
    }
    $(".type").val(@ViewBag.ty)
    $(".category").change(function () {
        var val = $(this).val();
        $.post("@Url.Action("Index","ProductManager")", { cate:  val})
        .done(function (res)
        {

            document.open();
            document.write(res);
            document.close();
        })

    })
    $(".type").change(function () {
        var valcate = $(".category").val();
        var val = $(this).val();
        $.post("@Url.Action("Index","ProductManager")", { cate: valcate,ty:  val})
        .done(function (res)
        {

            document.open();
            document.write(res);
            document.close();
        })
    })
</script>




