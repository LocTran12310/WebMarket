@model WebMarket.Models.RegisterVM

@{
    ViewData["Title"] = "Login";
}
@ViewBag.cus
<!-- register -->
<style>
    label.error{
        color:red
    }
</style>
<div class="register">
    <div class="container">
        <h2>Register Here</h2>
        <div class="login-form-grids">
            <h5>profile information</h5>
            <form id="register-form" method="post" asp-action="Register" asp-controller="Customer">
                <input asp-for="customer.Name" type="text" placeholder="Full Name...">
                <input asp-for="customer.Address" type="text" placeholder="Address...">
                <input asp-for="customer.Phone" type="text" placeholder="Phone numbers...">
                <br /><label asp-for="customer.Date"> Date of birth</label>
                <input asp-for="customer.Date" type="date" placeholder="Date of birth...">
                <h6>Login information</h6>
                <label class="error">@ViewBag.error</label>
                <input asp-for="account.UserName" type="email" placeholder="Email Address">
                <input asp-for="account.PassWord" type="password" placeholder="Password">
                <input asp-for="account.PasswordConfirm" type="password" placeholder="Password Confirmation">
                <div class="register-check-box">
                    <div class="check">
                        <label class="checkbox"><input type="checkbox" name="checkbox"><i> </i>I accept the terms and conditions</label>
                    </div>
                </div>
                <input type="submit" value="Register">
            </form>
        </div>
        <div class="register-home">
            <a href="~/Home">Home</a>
        </div>
    </div>
</div>
<!-- //register -->
@section Scripts{
    <script src="~/js/validate.js"></script>
}
