@model IEnumerable<WebMarket.Models.ProductVM>
<h1>@ViewBag.data</h1>

@foreach (var item in Model)
{
    <div class="col-md-4 top_brand_left" style="margin-top:20px;">
        <div class="hover14 column">
            <div class="agile_top_brand_left_grid">
                <div class="agile_top_brand_left_grid_pos">
                    <img src="~/images/offer.png" alt=" " class="img-responsive" />
                </div>
                <div class="agile_top_brand_left_grid1">
                    <figure>
                        <div class="snipcart-item block" data-id="@item.Id">
                            <div class="snipcart-thumb">
                                <a href="~/Category/@ViewBag.name/@item.type1/Detail/@item.EncryptedId"><img title=" " alt=" " src="~/images/img-products/@item.Image" width="150px" height="150px" /></a>
                                <p>@item.Name</p>
                                <div class="stars">
                                    <i class="fa fa-star blue-star" aria-hidden="true"></i>
                                    <i class="fa fa-star blue-star" aria-hidden="true"></i>
                                    <i class="fa fa-star blue-star" aria-hidden="true"></i>
                                    <i class="fa fa-star blue-star" aria-hidden="true"></i>
                                    <i class="fa fa-star gray-star" aria-hidden="true"></i>
                                </div>
                                <h4>
                                    @item.NewPrice <del>
                                        @if (item.Discount > 0)
                                        {
                                            @item.Price
                                        }
                                    </del>
                                </h4>
                            </div>
                            <div class="snipcart-details top_brand_home_details">
                                <input type="hidden" value="@item.Description" />
                                <input type="submit" name="submit" value="Add to cart" class="button show" data-toggle="modal" data-target="#modal-cart" />
                            </div>
                        </div>
                    </figure>
                </div>
            </div>
        </div>
    </div>
}



<div class="modal fade" id="modal-cart" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered " role="document">
        <div class="modal-content" style="margin:0 120px;">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-id="">
                <div class="row">
                    <div class="col-md-4 ">
                        <img src="" width="150px" height="150px">
                    </div>
                    <div class="col-md-8 ">
                        <div style="font-size:17px;font-weight:200">Name : <span class="modal-item-name"></span></div>
                        <div style="font-size:17px;font-weight:200">Price : <span class="modal-item-price"></span> </div>
                        <div style="font-size:17px;font-weight:200">Quantity : <input type="number" value="1" name="quantity" min="1" max="100" /></div>
                        <p style="margin-top:10px;">At PepsiCo, we aim to give consumers choices. Our full range of food and beverages are designed to bring a smile to anyone’s face, anytime, anywhere</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary add-to-cart">Add To Cart</button>
            </div>
        </div>
    </div>
</div>




<nav class="numbering" aria-label="...">
        <ul class="pagination paging">
            @{
                int totalpage = ViewBag.total;
                int currentpage = ViewBag.currentpage;
                if (currentpage > 1)
                {
                        <li class="page-item">
                            @if (ViewBag.type !=null)
                            {
                                <a class="page-link" href="@Url.Action("ProductByType",new {type = ViewBag.type, page = currentpage-1 })" tabindex="-1">Previous</a>
                            }
                            else
                            {
                                <a class="page-link" href="@Url.Action("Index", new { page = currentpage-1 })" tabindex="-1">Previous</a>
                            }

                        </li>
                }
                for (int i = 1; i <= totalpage; i++)
                {
                    <li class="@(i == ViewBag.currentpage ? "page-item active" : "page-item")">
                        @if (ViewBag.type != null)
                        {
                            <a class="page-link" href="@Url.Action("ProductByType", new { type=ViewBag.type,page = i })">@i</a>
                        }
                        else
                        {
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        }
                    </li>
                }
                if (currentpage < totalpage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentpage + 1 })" tabindex="-1">Next</a>
                    </li>
                }
            }
        </ul>
    </nav>

<script src="~/js/cart.js"></script>
