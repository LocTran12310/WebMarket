@model IEnumerable<WebMarket.Entities.Orderdetail>


@foreach (var order in ViewBag.order)
{
    <div class="col-md-7 col-bills">
        <div class="bill-table ">
            @foreach (var item in Model)
            {
                if (item.IdOrder == order.Id)
                {
                    <div class="bill-info">
                        <div class="image">
                            <img src="@Url.Content(item.IdProductNavigation.Image)" width="100px" height="100px" />
                            <div class="info">
                                <div class="name">
                                    @item.IdProductNavigation.Name
                                </div>
                                <div class="qiantity">
                                    X @item.Quantity
                                </div>
                            </div>
                        </div>
                        <div class="price">
                            @item.Newprice
                        </div>
                    </div>
                }

            }
        </div>
    </div>
    <div class="col-md-5 col-bills">
        <div class="order-info">
            <div class="flex ma-don">
                <h4>Mã đơn hàng:</h4>
                <p>MADH00 @order.Id</p>
               @if(order.Status == 0)
               {
                      <a name="hủy" data-id="0" id="delete">hủy đơn hàng</a>  
               }
            </div>
            <div class="flex ma-don">
                <h4>Status:</h4>
                <p class="status">@order.Status</p>
            </div>
            <div class="flex">
                <h4>Người nhận hàng:</h4>
                <p>@order.Name</p>
            </div>
            <div class="flex">
                <h4>Địa chỉ nhận hàng:</h4>
                <p>@order.Address</p>
            </div>
            <div class="flex">
                <h4>Số Điện thoại:</h4>
                <p>@order.Phone</p>
            </div>
            <div class="flex">
                <h4>Tổng tiền :</h4>
                <p>@order.TotalPrice</p>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $("#delete").click(function () {
            var id = $(this).attr('data-id');         
            $.ajax({
                type: "POST",
                url: "@Url.Action("BillDelete","BillCheck")",
                data: {id:id},
                success: function (res) {

                }

            });

        });

    });



</script>