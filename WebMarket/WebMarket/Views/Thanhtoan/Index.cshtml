@model WebMarket.Entities.Customer

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}
<div class="checkout">
    <div class="container">
        <div class="py-5 text-center">
            <h2>Thanh Toán </h2>
            <p class="lead">Thông tin của bạn</p>
        </div>

        <div class="row">
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Shipping address</h4>
                <form asp-action="Pay" asp-controller="Thanhtoan" method="post">
                    <div class="mb-3">
                        <label for="username">Full name</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"></span>
                            </div>
                            <input asp-for="Name" class="form-control" id="username" placeholder="Enter your fullname" value="@Model.Name" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email">Email <span class="text-muted">(Optional)</span></label>
                        <input type="email" asp-for="Email" class="form-control" id="email" placeholder="you@example.com" value="@Model.Email">
                    </div>
                    <div class="mb-3">
                        <label for="address">Address</label>
                        <input asp-for="Address" class="form-control" id="address" placeholder="Enter your address" value="@Model.Address" required>
                    </div>
                    <div class="mb-3">
                        <label for="Phone">Phone number</label>
                        <input asp-for="Phone" class="form-control" id="Phone" placeholder="Enter your phone number..." value="@Model.Phone" required>
                    </div>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block " type="submit">PAYMENT</button>
                    <hr class="mb-4">
                </form>
            </div>
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">YOUR SHOPPING CART</span>
                    <span class="badge badge-secondary badge-pill">@ViewBag.Quanity</span>
                </h4>

                <ul class="list-group mb-3">
                    <h6 class="my-0"></h6>
                    @{
                        foreach (var item in ViewBag.cart)
                        {

                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <small class="text-muted">@item.Name</small>
                                </div>
                                <span class="text-muted">@item.Price</span>
                            </li>

                        }
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total (USD)</span>
                            <strong>@ViewBag.TongTien</strong>
                        </li>
                    }
                </ul>
                <form class="card p-2">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Promo code">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-secondary">Redeem</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



